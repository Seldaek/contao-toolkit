{
    "name": "netzmacht/contao-toolkit",
    "description": "This library provides tools to simplify common tasks when developing with Contao.",
    "keywords": [
        "contao",
        "dev",
        "tools"
    ],
    "type": "contao-bundle",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "David Molineus",
            "email": "mail@netzmacht.de",
            "homepage": "http://www.netzmacht.de",
            "role": "Project leader"
        }
    ],
    "support": {
        "email": "mail@netzmacht.de",
        "issues": "https://github.com/netzmacht/contao-toolkit/issues",
        "source": "https://github.com/netzmacht/contao-toolkit"
    },
    "require": {
        "php": ">=5.6",
        "contao/core-bundle": "~4.4",
        "contao-community-alliance/composer-plugin": "~3.0"
        "container-interop/container-interop": "^1.1",
        "webmozart/assert": "^1.1"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "phpspec/phpspec": "~2.1",
        "henrikbjorn/phpspec-code-coverage": "~0.2",
        "netzmacht/contao-build-tools": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Netzmacht\\Contao\\Toolkit\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "vendor/netzmacht/contao-build-tools/autoload.php"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "extra": {
        "contao-manager-plugin": "Netzmacht\\Contao\\Toolkit\\ContaoManager\\Plugin",
        "branch-alias": {
            "dev-master": "2.0.x-dev",
            "dev-develop": "3.0.x-dev",
            "dev-support/1.0.x": "1.0.x-dev"
        }
    }
}
