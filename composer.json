{
    "name":"netzmacht/contao-dev-tools",
    "description":"This library provides tools to simplify common tasks when developing with Contao.",
    "keywords":["contao", "dev", "tools"],
    "type":"library",
    "license":"LGPL-3.0+",
    "authors":[
        {
            "name":"David Molineus",
            "email":"mail@netzmacht.de",
            "homepage":"http://www.netzmacht.de",
            "role":"Project leader"
        }
    ],
    "support":{
        "email":"mail@netzmacht.de",
        "issues":"https://github.com/netzmacht/contao-dev-tools/issues",
        "source":"https://github.com/netzmacht/contao-dev-tools"
    },
    "require":{
        "php":">=5.4",
        "contao/core":">=3.1,<3.5-dev",
        "contao-community-alliance/dependency-container": "~1.6"
    },
    "require-dev":{
        "phpspec/phpspec": "2.1.x-dev",
        "henrikbjorn/phpspec-code-coverage" : "~0.2",
        "netzmacht/contao-build-tools": "1.0.x-dev"
    },
    "autoload": {
        "psr-0": {
            "Netzmacht\\Contao\\DevTools": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "extra":{
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
